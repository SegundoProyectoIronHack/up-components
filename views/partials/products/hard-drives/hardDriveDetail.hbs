{{#with hardDrive}}
<div class="product-specs">
  <section class="product-specs-section">
    <h2 class="product-specs-title">Characteristics</h2>
    <ul class="product-specs-list">
      <li class="product-specs-list-item"><strong>Format: </strong>{{hardDrive.characteristics.format}}</li>
      <li class="product-specs-list-item"><strong>Capacity:
        </strong>{{hardDrive.characteristics.capacity}}</li>
      <li class="product-specs-list-item"><strong>Interface:
        </strong>{{hardDrive.characteristics.interface}}</li>
      <li class="product-specs-list-item"><strong>Reading speed:
        </strong>{{hardDrive.characteristics.readingSpeed}}</li>
      <li class="product-specs-list-item"><strong>Writing speed:
        </strong>{{hardDrive.characteristics.writingSpeed}}</li>
    </ul>
  </section>
  <section class="product-specs-section">
    <h2 class="product-specs-title">energy</h2>
    <ul class="product-specs-list">
      <li class="product-spects-list-item"><strong>Voltage: </strong>{{hardDrive.energy.voltage}}</li>
    </ul>
  </section>
  <section class="product-specs-section">
    <h2 class="product-specs-title">Weight and dimensions</h2>
    <ul class="product-specs-list">
      <li class="product-specs-list-item"><strong>Width: </strong>{{hardDrive.weightAndDimensions.width}}</li>
      <li class="product-specs-list-item"><strong>Height: </strong>{{hardDrive.weightAndDimensions.height}}</li>
      <li class="product-specs-list-item"><strong>Depth: </strong>{{hardDrive.weightAndDimensions.depth}}</li>
      <li class="product-specs-list-item"><strong>Weight: </strong>{{hardDrive.weightAndDimensions.weight}}</li>
    </ul>
  </section>
</div>
{{/with}}