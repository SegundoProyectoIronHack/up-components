{{#with motherBoard}}
<div class="product-specs">
  <section class="product-specs-section">
    <h2 class="product-specs-title">Processor</h2>
    <ul class="product-specs-list">
      <li class="product-specs-list-item"><strong>Socket:
        </strong>{{motherBoard.processor.socket}}</li>
      <li class="product-specs-list-item"><strong>Max Processors:
        </strong>{{motherBoard.processor.maxProcessors}}</li>
    </ul>
  </section>
  <section class="product-specs-section">
    <h2 class="product-specs-title">Memory</h2>
    <ul class="product-specs-list">
      <li class="product-spects-list-item"><strong>Max capacity:
        </strong>{{motherBoard.memory.maxCapacity}}</li>
      <li class="product-spects-list-item"><strong>Number of Slots:
        </strong>{{motherBoard.memory.numberOfSlots}}
      </li>
    </ul>
  </section>
  <section class="product-specs-section">
    <h2 class="product-specs-title">Back ports</h2>
    <ul class="product-specs-list">
      <li class="product-spects-list-item"><strong>USB 2.0:
        </strong>{{motherBoard.backports.usb2}}</li>
      <li class="product-spects-list-item"><strong>USB 3.0:
        </strong>{{motherBoard.backports.usb3}}</li>
      <li class="product-spects-list-item"><strong>Ethernet:
        </strong>{{motherBoard.backports.ethernet}}
      </li>
      <li class="product-spects-list-item"><strong>HDMI:
        </strong>{{motherBoard.backports.hdmi}}
      </li>
    </ul>
  </section>
  <section class="product-specs-section">
    <h2 class="product-specs-title">Internal connectors</h2>
    <ul class="product-specs-list">
      <li class="product-specs-list-item"><strong>USB 2.0:
        </strong>{{motherBoard.internalConnectors.usb2}}</li>
      <li class="product-specs-list-item"><strong>USB 3.0:
        </strong>{{motherBoard.internalConnectors.usb3}}</li>
      <li class="product-specs-list-item"><strong>Sata:
        </strong>{{motherBoard.internalConnectors.sata}}</li>
    </ul>
  </section>
  <section class="product-specs-section">
    <h2 class="product-specs-title">Energy</h2>
    <ul class="product-specs-list">
      <li class="product-specs-list-item"><strong>Number of pins:
        </strong>{{motherBoard.energy.numberOfPins}}</li>
    </ul>
  </section>
  <section class="product-specs-section">
    <h2 class="product-specs-title">Characteristics: </h2>
    <ul class="product-specs-list">
      <li class="product-specs-list-item"><strong>Type:
        </strong>{{motherBoard.characteristics.type}}</li>
      <li class="product-specs-list-item"><strong>Chipset:
        </strong>{{motherBoard.characteristics.chipset}}</li>
      <li class="product-specs-list-item"><strong> M2 slots:
        </strong>{{motherBoard.characteristics.m2Slots}}</li>
      <li class="product-specs-list-item"><strong>pci Express 3 slots:
        </strong>{{motherBoard.characteristics.pciExpress3Slots}}</li>
      <li class="product-specs-list-item"><strong>pci Express 2 slots:
        </strong>{{motherBoard.characteristics.pciExpress2Slots}}</li>
    </ul>
  </section>
  <section class="product-specs-section">
    <h2 class="product-specs-title">Weight and dimensions</h2>
    <ul class="product-specs-list">
      <li class="product-specs-list-item"><strong>Width:
        </strong>{{motherBoard.weightAndDimensions.width}}</li>
      <li class="product-specs-list-item"><strong>Depth:
        </strong>{{motherBoard.weightAndDimensions.depth}}</li>
    </ul>
  </section>
</div>
{{/with}}