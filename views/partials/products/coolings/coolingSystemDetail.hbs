{{#with coolingSystem}}
<div class="product-specs">
  <section class="product-specs-section">
    <h2 class="product-specs-title">Characteristics</h2>
    <ul class="product-specs-list">
      <li class="product-specs-list-item"><strong>Type: </strong>{{coolingSystem.characteristics.type}}</li>
      <li class="product-specs-list-item"><strong>Speed:
        </strong>{{coolingSystem.characteristics.speed}}</li>
      <li class="product-specs-list-item"><strong>Air flow:
        </strong>{{coolingSystem.characteristics.airFlow}}</li>
      <li class="product-specs-list-item"><strong>SPL:
        </strong>{{coolingSystem.characteristics.spl}}</li>
    </ul>
  </section>
  <section class="product-specs-section">
    <h2 class="product-specs-title">energy</h2>
    <ul class="product-specs-list">
      <li class="product-spects-list-item"><strong>Voltage: </strong>{{coolingSystem.energy.voltage}}</li>
      <li class="product-spects-list-item"><strong>Number of pins: </strong>{{coolingSystem.energy.numberOfPins}}
      </li>
    </ul>
  </section>
  <section class="product-specs-section">
    <h2 class="product-specs-title">Weight and dimensions</h2>
    <ul class="product-specs-list">
      <li class="product-specs-list-item"><strong>Width: </strong>{{coolingSystem.weightAndDimensions.width}}</li>
      <li class="product-specs-list-item"><strong>Height: </strong>{{coolingSystem.weightAndDimensions.height}}</li>
      <li class="product-specs-list-item"><strong>Depth: </strong>{{coolingSystem.weightAndDimensions.depth}}</li>
      <li class="product-specs-list-item"><strong>Weight: </strong>{{coolingSystem.weightAndDimensions.weight}}</li>
    </ul>
  </section>
</div>
{{/with}}