<h1>Edit product</h1>

{{> product product=product}}

{{#if product.graphicCard}}
  {{> editGraphicCard graphicCard=product.graphicCard}}
{{/if}}

{{#if product.ram}}
  {{> editRamMemory ramMemory=product.ram}}
{{/if}}

{{#if product.powerSupply}}
  {{> editPowerSupply powerSupply=product.powerSupply}}
{{/if}}

{{#if product.processor}}
  {{> editProcessor processor=product.processor}}
{{/if}}

{{#if product.case}}
  {{> editCase case=product.case}}
{{/if}}

{{#if product.coolingSystem}}
  {{> editCooling cooling=product.coolingSystem}}
{{/if}}

{{#if product.motherBoard}}
  {{> editMotherBoard motherBoard=product.motherBoard}}
{{/if}}

{{#if product.hardDrive}}
  {{> editHardDrive hardDrive=product.hardDrive}}
{{/if}}

{{#if product.keyboard}}
  {{> editKeyboard keyboard=product.keyboard}}
{{/if}}

{{#if product.mouse}}
  {{> editMouse mouse=product.mouse}}
{{/if}}

{{#if product.monitor}}
  {{> editMonitor monitor=product.monitor}}
{{/if}}

